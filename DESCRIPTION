Package: qesR
Type: Package
Title: Access Quebec Election Study Datasets
Version: 0.4.4
Maintainer: Thomas Gareau-Paquette <tg454@cornell.edu>
Authors@R: c(
    person(
      given = "Thomas",
      family = "Gareau-Paquette",
      role = c("aut", "cre"),
      email = "tg454@cornell.edu",
      comment = c(URL = "https://thomasgp.com")
    )
